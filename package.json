      "types": "./dist/src/sqlite.d.ts",
      "import": "./dist/src/sqlite.js"
    },
    "./postgres": {
      "types": "./dist/src/postgres.d.ts",
      "import": "./dist/src/postgres.js"
    },
    "./mysql": {
      "types": "./dist/src/mysql.d.ts",
      "import": "./dist/src/mysql.js"
    },
    "./bun.js": {
      "types": "./dist/src/bun.d.ts",
      "import": "./dist/src/bun.js"
    },
    "./mysql.js": {
      "types": "./dist/src/mysql.d.ts",
      "import": "./dist/src/mysql.js"
    },
    "./postgres.js": {
      "types": "./dist/src/postgres.d.ts",
      "import": "./dist/src/postgres.js"
    },
    "./sqlite.js": {
      "types": "./dist/src/sqlite.d.ts",
      "import": "./dist/src/sqlite.js"
    },
    "./zealot": {
      "types": "./dist/src/zealot.d.ts",
      "import": "./dist/src/zealot.js"
    },
    "./zealot.js": {
      "types": "./dist/src/zealot.d.ts",
      "import": "./dist/src/zealot.js"
    },
    "./package.json": "./dist/package.json"
