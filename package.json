{
  "name": "@b9g/zealot",
  "version": "0.1.0",
  "description": "Schema-driven database client. Zod schemas define storage, validation, and form fields.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./bun": {
      "types": "./dist/drivers/bun.d.ts",
      "import": "./dist/drivers/bun.js"
    },
    "./sqlite": {
      "types": "./dist/drivers/sqlite.d.ts",
      "import": "./dist/drivers/sqlite.js"
    },
    "./postgres": {
      "types": "./dist/drivers/postgres.d.ts",
      "import": "./dist/drivers/postgres.js"
    },
    "./mysql": {
      "types": "./dist/drivers/mysql.d.ts",
      "import": "./dist/drivers/mysql.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "bun test"
  },
  "dependencies": {
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@types/bun": "^1.3.4",
    "@types/better-sqlite3": "^7.6.0",
    "better-sqlite3": "^11.8.1",
    "postgres": "^3.4.0",
    "mysql2": "^3.12.0"
  },
  "peerDependencies": {
    "zod": "^4.0.0",
    "better-sqlite3": "^11.0.0",
    "postgres": "^3.0.0",
    "mysql2": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "better-sqlite3": {
      "optional": true
    },
    "postgres": {
      "optional": true
    },
    "mysql2": {
      "optional": true
    }
  },
  "keywords": [
    "database",
    "sql",
    "zod",
    "schema",
    "orm",
    "sqlite",
    "postgres",
    "mysql"
  ],
  "license": "MIT"
}
